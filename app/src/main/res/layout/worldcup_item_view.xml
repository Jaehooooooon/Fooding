<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_background_white"
    android:orientation="vertical">

    <!--음식점 이름 레이아웃-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/candidate_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음식점 이름"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <!--사진 레이아웃-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/radius_background_black"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/candidate_image_view_left"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:src="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>

            <ImageView
                android:id="@+id/candidate_image_view_right"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:src="@android:color/darker_gray" />

        </LinearLayout>

    </RelativeLayout>

    <!--선택 버튼 레이아웃-->


</LinearLayout>


