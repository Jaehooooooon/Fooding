<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/youtube_item"
    android:layout_width="287dp"
    android:layout_height="95dp"
    android:background="@drawable/radius_background_orange"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/youtube_thumbnail_view"
        android:layout_width="98dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:background="@android:color/darker_gray" />
    <!--android:src="@mipmap/ic_launcher"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/youtube_title_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/youtube_youtuber_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="channel"
                android:textColor="@android:color/black"
                android:textSize="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/radius_background_white">

                    <Button
                        android:id="@+id/youtube_link_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/play_icon" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>