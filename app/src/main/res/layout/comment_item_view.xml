<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/youtube_item"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/radius_background_orange"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/writer_image_view"
        android:layout_width="98dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:background="@android:color/darker_gray" />
    <!--android:src="@mipmap/ic_launcher"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.4"
                android:text="name_view"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="description"
                    android:textColor="@android:color/black"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/resAddress_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="resAddress"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_xxx" />

    </RelativeLayout>

</LinearLayout>